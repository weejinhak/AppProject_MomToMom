<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <android.support.v7.widget.Toolbar
        android:id="@+id/emailJoin_layout_layout_my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <ImageView
            android:id="@+id/emailJoin_layout_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/momtomom_toolbar_logo" />
    </android.support.v7.widget.Toolbar>


    <TextView
        android:id="@+id/feedingRoom_textView_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/titleTextColor1"
        android:gravity="center"
        android:text="@string/emailJoin_title_text"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailJoin_layout_layout_my_toolbar" />


    <EditText
        android:id="@+id/emailJoin_layout_text_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginEnd="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/join_edittext_border"
        android:ems="15"
        android:hint="@string/email_input_text"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@+id/emailJoin_layout_editText_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feedingRoom_textView_title" />

    <EditText
        android:id="@+id/emailJoin_layout_editText_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginEnd="45dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/join_edittext_border"
        android:ems="15"
        android:hint="@string/password_input_text"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/emailJoin_layout_editText_passWordOk"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailJoin_layout_text_name" />

    <EditText
        android:id="@+id/emailJoin_layout_editText_passWordOk"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginEnd="45dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/join_edittext_border"
        android:ems="10"
        android:hint="@string/password_input_ok_text"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/emailJoin_infoTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailJoin_layout_editText_password" />


    <Button
        android:id="@+id/emailJoin_layout_Button_infoOk_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="166dp"
        android:layout_marginStart="130dp"
        android:background="#EB6A6A"
        android:text="@string/join_text"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailJoin_infoTextView" />

    <TextView
        android:id="@+id/emailJoin_infoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="236dp"
        android:layout_marginStart="16dp"
        android:text="@string/validation_info_text"
        android:textSize="11sp"
        app:layout_constraintBottom_toTopOf="@+id/emailJoin_layout_Button_infoOk_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailJoin_layout_editText_passWordOk"
        tools:ignore="SmallSp" />

</android.support.constraint.ConstraintLayout>