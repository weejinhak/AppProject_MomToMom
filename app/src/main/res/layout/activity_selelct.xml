<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EB6A6A">


    <ImageView
        android:id="@+id/select_layout_logo_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/login_layout_logo_img" />

    <ImageButton
        android:id="@+id/select_layout_findFeedingRoom_imgButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="#EB6A6A"
        app:layout_constraintEnd_toStartOf="@+id/select_layout_guide_imgButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_layout_logo_image"
        app:srcCompat="@drawable/select_layout_baby_bottle_img" />

    <ImageButton
        android:id="@+id/select_layout_guide_imgButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#EB6A6A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/select_layout_findFeedingRoom_imgButton"
        app:layout_constraintTop_toTopOf="@+id/select_layout_findFeedingRoom_imgButton"
        app:srcCompat="@drawable/select_layout_guide_book_img" />

    <Button
        android:id="@+id/select_layout_myInfo_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:background="@drawable/my_mtm_button"
        android:text="@string/myInfo_go_text"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/select_layout_textView_find_feeding_room"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:text="수유실 찾기"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintHorizontal_bias="0.737"
        app:layout_constraintLeft_toLeftOf="@+id/select_layout_findFeedingRoom_imgButton"
        app:layout_constraintRight_toRightOf="@+id/select_layout_findFeedingRoom_imgButton"
        app:layout_constraintStart_toStartOf="@+id/select_layout_findFeedingRoom_imgButton"
        app:layout_constraintTop_toBottomOf="@+id/select_layout_findFeedingRoom_imgButton" />

    <TextView
        android:id="@+id/select_layout_textView_find_guide"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:text="@string/find_guideBook_text"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/select_layout_guide_imgButton"
        app:layout_constraintHorizontal_bias="0.238"
        app:layout_constraintLeft_toLeftOf="@+id/select_layout_guide_imgButton"
        app:layout_constraintRight_toRightOf="@+id/select_layout_guide_imgButton"
        app:layout_constraintTop_toBottomOf="@+id/select_layout_guide_imgButton" />

</android.support.constraint.ConstraintLayout>
