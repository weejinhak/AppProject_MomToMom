<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EB6A6A">


    <ImageView
        android:id="@+id/select_layout_logo_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="60dp"
        app:layout_constraintBottom_toTopOf="@+id/select_layout_myInfo_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/login_layout_logo_img" />

    <ImageButton
        android:id="@+id/select_layout_findFeedingRoom_imgButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="#EB6A6A"
        app:layout_constraintEnd_toStartOf="@+id/select_layout_guide_imgButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_layout_logo_image"
        app:srcCompat="@drawable/select_layout_baby_bottle_img" />

    <ImageButton
        android:id="@+id/select_layout_guide_imgButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#EB6A6A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/select_layout_findFeedingRoom_imgButton"
        app:layout_constraintTop_toTopOf="@+id/select_layout_findFeedingRoom_imgButton"
        app:srcCompat="@drawable/select_layout_guide_book_img" />

    <Button
        android:id="@+id/select_layout_myInfo_button"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="#B34141"
        android:text="@string/myInfo_go_text"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/select_layout_textView_find_feeding_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="수유실 찾기"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_layout_findFeedingRoom_imgButton"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/select_layout_findFeedingRoom_imgButton"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/select_layout_findFeedingRoom_imgButton"
        app:layout_constraintHorizontal_bias="0.737" />

    <TextView
        android:id="@+id/select_layout_textView_find_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/find_guideBook_text"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/select_layout_guide_imgButton"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/select_layout_guide_imgButton"
        app:layout_constraintHorizontal_bias="0.238"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/select_layout_guide_imgButton" />

    <Button
        android:id="@+id/select_layout_logout_temporary_button_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그아웃(임시)"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="0dp" />
</android.support.constraint.ConstraintLayout>